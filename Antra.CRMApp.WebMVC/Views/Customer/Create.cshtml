@model CustomerRequestModel
<form asp-action="Create" asp-controller="Customer" method="post">
    <div class="container">
        <div class="row">
            <div class="col mb-5">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col mb-5">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="col mb-5">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control"/>
                <span asp-validation-for="City"></span>
            </div>
            <div class="col mb-5">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone"></span>
            </div>

        </div>
        <div class="row">
            <div class="col mb-5">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address"></span>
            </div>
            <div class="col mb-5">
                <label asp-for=" City"></label>
                <input asp-for="City" class="form-control"/>
                <span asp-validation-for="City"></span>
            </div>
            <div class="col mb-5">
                <label asp-for="RegionId"></label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.Regions" >
                <option value="">Select a region</option>   
                </select>
                <span asp-validation-for="RegionId"></span>
            </div>  
        </div>
        <div class="row">
            <div class="col mb-5">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" class="form-control"/>
                <span asp-validation-for="PostalCode"></span>
            </div>
            <div class="col mb-5">
                <label asp-for=" Country"></label>
                <input asp-for="Country" class="form-control"/>
                <span asp-validation-for="Country"></span>
            </div> 
        </div>
        <input type="submit" class="btn-primary btn" value="Create Customer"/>
    </div>
</form>
