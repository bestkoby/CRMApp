@model RegionModel

   @if (ViewBag.IsEdit==true)
{
         <div class="container">
            <di class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Region Updated Successfully. Go to <a asp-action="Index" asp-controller="Region" >Index</a> </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}
<form method="post"  >
    <div class="my-5">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name"  class="form-control" placeholder="Enter Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
      
    <input type="submit" class="btn-primary" value="Edit" />
</form>