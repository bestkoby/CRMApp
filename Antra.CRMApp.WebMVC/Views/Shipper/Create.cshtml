@{
}
@model ShipperRequestModel
<form asp-action="Create" asp-controller="Shipper" method="post">
    <h1 class="display-6">Add New Shipper</h1>
    <hr/> 
    <div class="container">
        <div class="row">
            <div class="col mb-5">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col mb-5">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone"></span>
            </div>
        </div>
        <input type="submit" class="btn-primary btn" value="Create  Shipper"/>
    </div>
</form>